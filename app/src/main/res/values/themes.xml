<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FitnessApp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="TransparentDialogTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CustomCalendarView" parent="@style/Theme.FitnessApp">
        <item name="android:dateTextAppearance">@style/CustomCalendarDateText</item>
    </style>
    <style name="CustomCalendarDateText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item> <!-- Set text color to white -->
    </style>
</resources>