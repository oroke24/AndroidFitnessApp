<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
        <TextView
            android:id="@+id/dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/blank"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_outline_clear"
            android:padding="10dp"
            android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/exerciseLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="125dp"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:layout_marginEnd="1dp"
                    android:padding="10dp"
                    android:background="@drawable/cool_background2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/deleteExercise1Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="12dp"
                                    android:textColor="@color/white"
                                    android:contentDescription="@string/delete_button" />
                                <TextView
                                    android:id="@+id/addExercise1Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_refresh_transparent_24"
                                    android:drawableEnd="@drawable/walking_arrows_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/deleteExercise2Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/addExercise2Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:background="@drawable/cool_background2"
                                    android:drawableStart="@drawable/ic_refresh_transparent_24"
                                    android:drawableEnd="@drawable/walking_arrows_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/deleteExercise3Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/addExercise3Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_refresh_transparent_24"
                                    android:drawableEnd="@drawable/walking_arrows_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/deleteExercise4Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/addExercise4Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:background="@drawable/cool_background2"
                                    android:drawableStart="@drawable/ic_refresh_transparent_24"
                                    android:drawableEnd="@drawable/walking_arrows_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/deleteExercise5Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/addExercise5Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_refresh_transparent_24"
                                    android:drawableEnd="@drawable/walking_arrows_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recipeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="125dp"
                    android:orientation="vertical"
                    android:gravity="end|center_vertical"
                    android:layout_marginStart="1dp"
                    android:padding="10dp"
                    android:background="@drawable/cool_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/addRecipe1Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:background="@drawable/cool_background"
                                    android:drawableStart="@drawable/ic_soup_kitchen_24"
                                    android:drawableEnd="@drawable/ic_refresh_transparent_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                                <ImageButton
                                    android:id="@+id/deleteRecipeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/addRecipe2Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:layout_gravity="center"
                                    android:drawableStart="@drawable/ic_soup_kitchen_24"
                                    android:drawableEnd="@drawable/ic_refresh_transparent_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                                <ImageButton
                                    android:id="@+id/deleteRecipe2Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/addRecipe3Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="175dp"
                                    android:gravity="center"
                                    android:background="@drawable/cool_background"
                                    android:drawableStart="@drawable/ic_soup_kitchen_24"
                                    android:drawableEnd="@drawable/ic_refresh_transparent_24"
                                    android:textSize="14sp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"/>

                                <ImageButton
                                    android:id="@+id/deleteRecipe3Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/addRecipe4Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_soup_kitchen_24"
                                    android:drawableEnd="@drawable/ic_refresh_transparent_24"
                                    android:gravity="center"
                                    android:maxWidth="175dp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <ImageButton
                                    android:id="@+id/deleteRecipe4Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/addRecipe5Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/cool_background"
                                    android:drawableStart="@drawable/ic_soup_kitchen_24"
                                    android:drawableEnd="@drawable/ic_refresh_transparent_24"
                                    android:gravity="center"
                                    android:maxWidth="175dp"
                                    android:padding="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <ImageButton
                                    android:id="@+id/deleteRecipe5Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_delete_button_white"
                                    android:padding="15dp"
                                    android:contentDescription="@string/delete_button"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>